@import './reset.styl'

:root
	--color-bg #fff
	--color-ink #000
	--px calc((100vw / 324))

html
	background var(--color-bg)
	color var(--color-ink)
	font-size 16px

//Hide the scrollbar
body
	position fixed
	overflow hidden
	touch-action manipulation

*, button, input, textarea
	font-smooth never
	-webkit-font-smoothing none